<section class="h-100">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="text-center my-5">
          <h2>Welcome to Entire-View</h2>
        </div>
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h3 class="fs-4 card-title fw-bold mb-4">Login</h3>
            <%= form_with model: @employee, url: employee_session_path , local: true do |f| %>
              <div class="mb-3">
                <%= f.label :email , class: "mb-2 text-muted"%><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="mb-3">
                <a href="/employees/password/new" class="float-end">
                  Forgot Password?
                </a>
                <%= f.label :password, class: "text-muted" %><br/>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-primary ms-auto" %>
              </div>
            <% end %>
            
            <div class="card-footer py-3 border-0">
              <div class="text-center">
                Register as an Employee <a href="/employees/sign_up" class="text-dark">Sign Up</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
