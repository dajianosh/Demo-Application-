<h2>Sign up</h2>
	<%= form_with model: @employee, url: employee_registration_path, method: :post, local: true do |f| %>
  	<div class="field">
    	<%= f.label :email %><br />
    	<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    	<ul>
      	<% @employee.errors[:email].each do |msg| %>
        	<li><%= msg %></li>
      		<% end %>
      </ul>
  	</div>

  	<div class="field">
    	<%= f.label :password %>
    	<% if @minimum_password_length %>
    		<em>(<%= @minimum_password_length %> characters minimum)</em>
    	<% end %><br />
    	<%= f.password_field :password, autocomplete: "new-password" %>
    	<ul>
      	<% @employee.errors[:password].each do |msg| %>
          <li><%= msg %></li>
        	<% end %>
      </ul>
  	</div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name%>
    <ul>
        <% @employee.errors[:name].each do |msg| %>
          <li><%= msg %></li>
        	<% end %>
      </ul>
  </div>

  <div class="field">
    <%= f.label 'role' %><br>
    <%= f.select :role, options_for_select([["Select One", ""], "HR", "Resource"]) %>
    <ul>
    	<% @employee.errors[:role].each do |msg| %>
    	<li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
    <ul>
    	<% @employee.errors[:address].each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div class="field">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number %>
    <ul>
    	<% @employee.errors[:contact_number].each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div class="field">
    <%= f.label :experience %><br />
    <%= f.number_field :experience %>
    <ul>
    	<% @employee.errors[:experience].each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
	<% end %>

	<%= render "devise/shared/links" %>
	