<h2>Sign up</h2>
<%= form_with model: @employee, url: employee_registration_path, method: :post, local: true do |f| %>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= render "shared/error_messages", { field: :email, object: @employee } %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <em>(<%= @minimum_password_length %> characters minimum)</em> <% if @minimum_password_length %> <% end %> <br>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <%= render "shared/error_messages", { field: :password, object: @employee } %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= render "shared/error_messages", { field: :name, object: @employee } %>
  </div>
  <div class="field">
    <%= f.label 'role' %><br>
    <%= f.select :role, options_for_select( [ [ "Select One", "" ], "HR", "Resource" ] ) %>
    <%= render "shared/error_messages", { field: :role, object: @employee } %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
    <%= render "shared/error_messages", { field: :address, object: @employee } %>
  </div>
  <div class="field">
    <%= f.label :contact_number %><br>
    <%= f.text_field :contact_number %>
    <%= render "shared/error_messages", { field: :contact_number, object: @employee } %>
  </div>
  <div class="field">
    <%= f.label :experience %><br>
    <%= f.number_field :experience %>
    <%= render "shared/error_messages", { field: :email, object: @employee } %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
