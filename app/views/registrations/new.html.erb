<h1>Sign Up</h1>
  <%= form_with model: @employee, url: sign_up_path, local: true do |f| %>
  
      <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
   
    <p>
    <%= f.label 'email' %><br>
    <%= f.text_field :email %>
    </p>
    <p>
    <%= f.label 'password' %><br>
    <%= f.password_field :password %>
    </p>
    <p>
    <%= f.label 'password_confirmation' %><br>
    <%= f.password_field :password_confirmation %>
    </p>
    <p>
    <%= f.label 'name' %><br>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label 'role' %><br>
    <%= f.select :role, options_for_select([["Select One", ""], "HR", "Resource"]) %>
    </p>
    <p>
    <%= f.label 'address' %><br>
    <%= f.text_field :address %>
    </p>
    <p>
    <%= f.label 'contact_number' %><br>
    <%= f.text_field :contact_number %>
    </p>
    <p>
    <%= f.label 'experience in years' %><br>
    <%= f.text_field :experience %>
    </p>
    <p>
    <%= f.submit 'Sign Up' %>
    </p>
  <% end %>
  