<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h4>Feedback Details for <%= @interview_feedback.interview.candidate.name %></h4>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                <% @interview_answer_ratings.each do |interview_answer_rating| %>
                  <div>
                    <h6>Question</h6>
                    <p class="text-muted"><%= interview_answer_rating.question_bank.question %></p>
                  </div>
                  <div>
                    <h6>Answer</h6>
                    <p class="text-muted"><%= interview_answer_rating.answer %></p>
                  </div>
                  <div>
                    <h6>Answer Rating</h6>
                    <p class="text-muted"><%= interview_answer_rating.rating %></p>
                  </div>
                <% end %>
                  <div>
                    <h6>Skill Rating</h6>
                    <p class="text-muted"><%= @interview_feedback.skill_rating %></p>
                  </div>
                  <div>
                    <h6>Soft Skill Rating</h6>
                    <p class="text-muted"><%= @interview_feedback.soft_skill_rating %></p>
                  </div>
                  <div>
                    <h6>Final Rating</h6>
                    <p class="text-muted"><%= @interview_feedback.final_rating %></p>
                  </div>
                </div>
                <%= link_to "Edit Feedback Details", edit_interview_interview_feedback_path(@interview.id, @interview_feedback.id, @interview_answer_ratings.ids) %><br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
